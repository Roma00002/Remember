<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/message_received" />

    <!-- Corner radius with WhatsApp-style left side -->
    <corners
        android:bottomLeftRadius="@dimen/message_corner_radius"
        android:bottomRightRadius="@dimen/message_corner_radius"
        android:topLeftRadius="2dp"
        android:topRightRadius="@dimen/message_corner_radius" />

    <!-- Border for better contrast -->
    <stroke
        android:width="1dp"
        android:color="@color/message_received_border" />

</shape>