<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/message_sent" />

    <!-- Corner radius with WhatsApp-style right side -->
    <corners
        android:bottomLeftRadius="@dimen/message_corner_radius"
        android:bottomRightRadius="@dimen/message_corner_radius"
        android:topLeftRadius="@dimen/message_corner_radius"
        android:topRightRadius="2dp" />

    <!-- Optional subtle shadow -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="1dp" />

</shape>